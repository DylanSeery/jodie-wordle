// tsconfig.app.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true, // For incremental builds
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/__tests__/*"]
}
